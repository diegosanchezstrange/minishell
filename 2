#include <minishell.h>

int	valid_variable(char  *data)
{
	int	i;
	t_list	*cpy;

	i = 0;
	cpy = g_env;
	while (g_env)
	{
		if (ft_strncmp(g_env->content, data, ft_strlen(data)))
			return (1);
		g_env = g_env->next;
	}
	g_env = cpy;
	return (0);
}

void	ft_unset(t_ast *tree)
{
	t_list	**cpy;
	t_list	**prev;
	char	*data;

	cpy = ft_calloc(1, sizeof(void *));
	prev = ft_calloc(1, sizeof(void *));
	*cpy = g_env;
	*prev = g_env;
	if (!tree->left->data)
		return ;
	data = tree->left->data;
	if (!valid_variable(data))
		return ;
	while (g_env)
	{
		if (ft_strncmp(g_env->content, data, ft_strlen(data)))
		{
			printf("g_env: %s\n", (char *)g_env->content);
			printf("prev: %s\n", (char *)(*prev)->content);
			printf("before: %s\n", (char *)(*prev)->next->content);
			prev->next = g_env->next;
			printf("after: %s\n", (char *)(*prev)->next->content);
			ft_lstdelone(g_env, free);
			return ;
		}
		*prev = g_env;
		g_env = g_env->next;
	}
	g_env = cpy;
}
